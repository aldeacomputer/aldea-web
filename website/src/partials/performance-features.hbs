<div class="flex flex-wrap items-top justify-center gap-16">
  {{#each data}}
    <div class="w-full max-w-sm space-y-2">
      <img src="{{this.image}}" alt="{{this.title}}" class="block max-w-xs mx-auto" />
      <h3 class="text-xl text-center">{{this.title}}</h3>
      <p class="text-sm text-center text-gray-50">{{this.description}}</p>
    </div>
  {{/each}}
</div>