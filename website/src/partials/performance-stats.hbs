<div class="p-6 md:p-8 lg:p-12 bg-white">
  <div class="border border-gray-20 rounded-lg overflow-hidden">
    <table class="w-full font-mono text-sm text-gray-60 border-collapse">
      <tr class="h-16 bg-gray-10 border-b border-gray-20">
        <th class="w-1/2 md:w-1/3 px-5 font-normal text-left">Network</th>
        <th class="w-1/2 md:w-1/3 px-5 font-normal text-left">TX/sec</th>
        <th class="hidden md:table-cell w-1/3 px-5 font-normal text-left">vs Aldea</th>
      </tr>

      {{#each data}}
        <tr class="h-16 border-b border-gray-20">
          <td class="px-5">{{ this.name }}</td>
          <td class="px-5">{{ this.tps }}</td>
          <td class="hidden md:table-cell px-5">{{ this.vs }}</td>
        </tr>
      {{/each}}

      <tr class="h-16 text-lg text-gray-90 bg-gray-20">
        <td class="px-5">
          <img src="/images/logo-dark.png" alt="Aldea Computer" width="110" />
        </td>
        <td class="px-5">1M +</td>
        <td class="hidden md:table-cell"></td>
      </tr>
    </table>
  </div>
</div>